<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset
		name="default"
		label="COM_JINBOUND_NOTE_FIELDSET_DEFAULT"
	>
		<field
			id="id" name="id"
			type="hidden"
			class="readonly"
			label="COM_JINBOUND_ID"
			default="0"
			readonly="true"
		/>
		
		<field
			id="lead_id" name="lead_id"
			type="hidden"
			class="readonly"
			label="COM_JINBOUND_LEAD_ID"
			readonly="true"
		/>
		
		<field
			id="text" name="text"
			type="textarea"
			label="COM_JINBOUND_NOTE_TEXT"
			description="COM_JINBOUND_CAMPAIGN_TEXT_DESC"
			class="input-block-level"
			required="true"
		/>

		<field
			id="published" name="published"
			type="jinboundpublished"
			label="JPUBLISHED"
			description="COM_JINBOUND_PUBLISHED_DESC"
			class="input-block-level"
			default="1"
		/>

	</fieldset>
</form>