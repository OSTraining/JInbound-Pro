                <field name="mode_module"
                       type="modjinboundctamodule"
                       label="MOD_JINBOUND_CTA_MODULE"
                       description="MOD_JINBOUND_CTA_MODULE_DESC">
                    <option value="">MOD_JINBOUND_CTA_MODULE_OPTION_SELECT</option>
