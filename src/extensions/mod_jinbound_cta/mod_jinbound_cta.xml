                <field name="mode_editor"
                       type="editor"
                       label="MOD_JINBOUND_CTA_EDITOR"
                       description="MOD_JINBOUND_CTA_EDITOR_DESC"
                       buttons="0"
                       filter="JComponentHelper::filterText"/>
