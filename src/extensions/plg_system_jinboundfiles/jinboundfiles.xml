<?xml version="1.0" encoding="UTF-8"?>
<extension version="3.9" type="plugin" group="system" method="upgrade">
    <name>plg_system_jinboundfiles</name>
    <creationDate>January 22 2020</creationDate>
    <author>Joomlashack</author>
    <authorEmail>help@joomlashack.com</authorEmail>
    <authorUrl>http://joomlashack.com</authorUrl>
    <copyright>Copyright 2016-2020 Joomlashack.com</copyright>
    <license>GNU/GPL</license>
    <version>3.0.9</version>
    <description>PLG_SYSTEM_JINBOUNDFILES_XML_DESCRIPTION</description>

    <files>
        <folder>language</folder>
        <folder>tmpl</folder>
        <filename plugin="jinboundfiles">jinboundfiles.php</filename>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/plugins/system/jinboundfiles/field">
                <field name="extensions"
                       type="text"
                       label="PLG_SYSTEM_JINBOUNDFILES_EXTENSIONS"
                       description="PLG_SYSTEM_JINBOUNDFILES_EXTENSIONS_DESC"
                       default="bmp,csv,doc,gif,ico,jpg,jpeg,odg,odp,ods,odt,pdf,png,ppt,swf,txt,xcf,xls,BMP,CSV,DOC,GIF,ICO,JPG,JPEG,ODG,ODP,ODS,ODT,PDF,PNG,PPT,SWF,TXT,XCF,XLS"/>

                <field name="storage_path"
                       type="text"
                       label="PLG_SYSTEM_JINBOUNDFILES_STORAGE_PATH"
                       description="PLG_SYSTEM_JINBOUNDFILES_STORAGE_PATH_DESC"/>
            </fieldset>
        </fields>
    </config>
</extension>
