<?xml version="1.0" encoding="UTF-8"?>
<extension version="3.7" type="plugin" group="system" method="upgrade">
    <name>PLG_SYSTEM_JINBOUNDSALESFORCE</name>
    <creationDate>March 13 2018</creationDate>
    <author>Joomlashack</author>
    <authorEmail>help@joomlashack.com</authorEmail>
    <authorUrl>http://joomlashack.com</authorUrl>
    <copyright>Copyright 2016-2020 Joomlashack.com</copyright>
    <license>GNU/GPL</license>
    <version>3.0.0a1</version>
    <description>PLG_SYSTEM_JINBOUNDSALESFORCE_DESCRIPTION</description>

    <scriptfile>jinboundsalesforce.install.php</scriptfile>

    <files>
        <folder>field</folder>
        <folder>form</folder>
        <folder>language</folder>
        <folder>library</folder>
        <filename plugin="jinboundsalesforce">jinboundsalesforce.php</filename>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/plugins/system/jinboundsalesforce/field">
                <field name="wsdl"
                       type="jib.salesforcewsdl"
                       label="PLG_SYSTEM_JINBOUNDSALESFORCE_WSDL"
                       description="PLG_SYSTEM_JINBOUNDSALESFORCE_WSDL_DESC"/>

                <field name="username"
                       type="text"
                       label="PLG_SYSTEM_JINBOUNDSALESFORCE_USERNAME"
                       description="PLG_SYSTEM_JINBOUNDSALESFORCE_USERNAME_DESC"/>

                <field name="password"
                       type="password"
                       label="PLG_SYSTEM_JINBOUNDSALESFORCE_PASSWORD"
                       description="PLG_SYSTEM_JINBOUNDSALESFORCE_PASSWORD_DESC"/>

                <field name="security_token"
                       type="text"
                       label="PLG_SYSTEM_JINBOUNDSALESFORCE_SECURITY_TOKEN"
                       description="PLG_SYSTEM_JINBOUNDSALESFORCE_SECURITY_TOKEN_DESC"/>

                <field name="use_token"
                       type="radio"
                       default="1"
                       class="btn-group btn-group-yesno"
                       label="PLG_SYSTEM_JINBOUNDSALESFORCE_USE_TOKEN"
                       description="PLG_SYSTEM_JINBOUNDSALESFORCE_USE_TOKEN_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
